{% extends 'ExampleApplicationBundle:Layout:main.html.twig' %}
{% block header %}
<h1>Show Profile</h1>
{% endblock header %}
{% block local %}
{% include "ExampleApplicationBundle:Profile:navigation.html.twig" %}
{% endblock local %}
{% block content %}
{% block read %}
<table class="read">
    <tbody>
        <tr>
            <th>User</th>
            {% if entity.user is empty %}
            <td>-</td>
            {% else %}
            <td>{{ entity.user.username }}</td>
            {% endif %}
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ entity.status }}</td>
        </tr>
        <tr>
            <th>Position</th>
            <td>{{ entity.position }}</td>
        </tr>
        <tr>
            <th>Data</th>
            <td>{{ entity.data }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Change</th>
            <td>{{ entity.change|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>First</th>
            <td>{{ entity.first }}</td>
        </tr>
        <tr>
            <th>Last</th>
            <td>{{ entity.last }}</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>{{ entity.gender }}</td>
        </tr>
        <tr>
            <th>Birth</th>
            <td>{{ entity.birth|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ entity.url }}</td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>{{ entity.tags }}</td>
        </tr>
        <tr>
            <th>Views</th>
            <td>{{ entity.views }}</td>
        </tr>
        <tr>
            <th>Marks</th>
            <td>{{ entity.marks }}</td>
        </tr>
    </tbody>
</table>
{% endblock read %}
{% block update %}
<div class="update">
    <a href="{{ path('profile_edit', { 'id': entity.id }) }}">
        Edit Profile
    </a>
</div>
{% endblock update %}
{% block delete %}
<form action="{{ path('profile_delete', { 'id': entity.id }) }}" method="post" class="delete" novalidate>
    {{ form_widget(delete_form) }}
    <button type="submit">Delete Profile</button>
</form>
{% endblock delete %}
{% endblock content %}