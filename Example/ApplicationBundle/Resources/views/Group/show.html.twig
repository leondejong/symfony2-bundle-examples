{% extends 'ExampleApplicationBundle:Layout:main.html.twig' %}
{% block header %}
<h1>Show Group</h1>
{% endblock header %}
{% block local %}
{% include "ExampleApplicationBundle:Group:navigation.html.twig" %}
{% endblock local %}
{% block content %}
{% block read %}
<table class="read">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ entity.status }}</td>
        </tr>
        <tr>
            <th>Position</th>
            <td>{{ entity.position }}</td>
        </tr>
        <tr>
            <th>Data</th>
            <td>{{ entity.data }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Change</th>
            <td>{{ entity.change|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>{{ entity.role }}</td>
        </tr>
        <tr>
            <th>Users</th>
            {% if entity.users is empty %}
            <td>-</td>
            {% else %}
            <td>{% for user in entity.users %}{{ user.username }}{% if not loop.last %}, {% endif %}{% endfor %}</td>
            {% endif %}
        </tr>
    </tbody>
</table>
{% endblock read %}
{% block update %}
<div class="update">
    <a href="{{ path('group_edit', { 'id': entity.id }) }}">
        Edit Group
    </a>
</div>
{% endblock update %}
{% block delete %}
<form action="{{ path('group_delete', { 'id': entity.id }) }}" method="post" class="delete" novalidate>
    {{ form_widget(delete_form) }}
    <button type="submit">Delete Group</button>
</form>
{% endblock delete %}
{% endblock content %}