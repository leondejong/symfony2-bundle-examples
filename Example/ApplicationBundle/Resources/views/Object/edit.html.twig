{% extends 'ExampleApplicationBundle:Layout:main.html.twig' %}
{% form_theme edit_form 'ExampleApplicationBundle:Form:field.html.twig' %}
{% block header %}
<h1>Edit Object</h1>
{% endblock header %}
{% block local %}
{% include "ExampleApplicationBundle:Object:navigation.html.twig" %}
{% endblock local %}
{% block content %}
{% block update %}
<img src="{{ entity.getRelativeReference()|imagine_filter('thumbnail') }}" />
<form action="{{ path('object_update', { 'id': entity.id }) }}" method="post" class="update" {{ form_enctype(edit_form) }} novalidate>
    {{ form_widget(edit_form) }}
    <button type="submit">Edit Object</button>
</form>
{% endblock update %}
{% block delete %}
<form action="{{ path('object_delete', { 'id': entity.id }) }}" method="post" class="delete" novalidate>
    {{ form_widget(delete_form) }}
    <button type="submit">Delete Object</button>
</form>
{% endblock delete %}
{% endblock content %}