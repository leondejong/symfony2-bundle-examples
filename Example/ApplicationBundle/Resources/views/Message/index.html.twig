{% extends 'ExampleApplicationBundle:Layout:main.html.twig' %}
{% block header %}
<h1>List Message</h1>
{% endblock header %}
{% block local %}
{% include "ExampleApplicationBundle:Message:navigation.html.twig" %}
{% endblock local %}
{% block content %}
{% block list %}
<table class="list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Change</th>
            <th>Title</th>
            <th>Views</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('message_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.change %}{{ entity.change|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.views }}</td>
            <td>
                <a href="{{ path('message_show', { 'id': entity.id }) }}">Read</a> - 
                <a href="{{ path('message_edit', { 'id': entity.id }) }}">Update</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock list %}
{% block create %}
<div class="update">
    <a href="{{ path('message_new') }}">
        Create Message
    </a>
</div>
{% endblock create %}
{% endblock content %}